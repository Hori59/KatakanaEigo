<div class="row">
  <div class="col">
    <h2>コメント編集</h2>
    <div class="form" id="comment_edit">
      <%= form_for [@word, @comment] do |f| %>
        <div class="form-group">
          <%= f.text_area :body, autofocus: true, autocomplete: "body", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit '保存', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>