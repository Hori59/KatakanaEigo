<div class="row">
  <!-- ユーザプロフィール -->
  <div class="col-md-3">
    <div class="user_profile">
      <%= attachment_image_tag @user, :profile_image, size: '100x100', format: 'jpeg', fallback: "no_image.jpeg" %><br>
      <%= @user.name %><br>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      <%= @user.words.count %>
      <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
      <%= @user.favorites.count %><br>
      <%= link_to "プロフィール編集", edit_user_path, class: "btn" %>
    </div>
  </div>

  <!-- ユーザの投稿一覧 -->
  <div class="col-md-9">
    <h2><%= @user.name %>さんの投稿一覧</h2>
    <div class="row">
      <%= render partial: 'words/shared/index', collection: @words, as: 'words' %>
    </div>
  </div>
</div>