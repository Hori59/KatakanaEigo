<div class="row">
  <!-- タグ一覧 -->
  <div class="col-md-3">
    <div class="row side_menu">
      <div class="col-md-12 list_group">
        <h2>タグ一覧</h2>
        <div class="tag_list">
          <% @tags.each do |tag| %>
            <%= link_to tag.tag_name, words_path(tag_id: tag.id) %>
          <% end %>
        </div>
      </div>
      <div class="col-md-12 list_group">
        <h2>人気ワード</h2>
        <div class="rank_links">
          <% @all_ranks.each do |top_word| %>
            <%= link_to top_word.name, word_path(top_word) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- 投稿一覧（作成日降順） -->
  <div class="col-md-9">
    <h2>投稿一覧</h2>
    <div class="row word_index">
      <%= render partial: 'words/shared/index', collection: @words, as: 'words' %>
    </div>
  </div>
</div>